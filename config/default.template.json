{
  "logger": {
    "debugEnabled": 0,
    "logDir": "@LOG_DIR@",
    "logName": "kaltura_async_proxy.log",
    "accessLogName": "kaltura_async_proxy_access.log",
    "errorLogName": "kaltura_async_proxy_error.log"
  },

  "server": {
    "version": "v1.0",
    "ipSalt": "@remote_addr_header_salt@"
  },

  "cdn_api_host": {
    "cdn_api_host": "@WWW_HOST@",
    "cdn_api_host_https": "@WWW_HOST@"
  },

  "cloud": {
    "requestTimeout": 100000,
    "httpPort": "@http_port@",
    "httpsPort": "@https_port@"
  },

  "throttle": {
    //example - 10 messages per second will be [messagePerTimePeriod:10 , timePeriod: 1000]
    "messagePerTimePeriod": 10,
    "timePeriod": 1000
  },

  "handlers": [
    //history example
    {
      "identifier": {
        "service": "userEntry",
        "action": "update"
      },
      "cacheKeyParams": ["cuepointId,userEntry"],
      //ttl in milliseconds
      "ttl": 30000,
      "extendTtl": true
    },

    {
      "identifier": {
        "service": "cuepoint_cuepoint",
        "action": "update"
      },
      "cacheKeyParams": ["id"],
      //ttl in milliseconds
      "ttl": 2000,
      "extendTtl": false
    }
  ]
}
